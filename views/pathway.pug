doctype html
html
	head
		title #{qualification.label} #{examboard.name} subjects | ExamDB
		meta(charset='UTF-8')
		meta(name='description' content='The exam board ' + examboard.name + ' sets ' + qualification.label + ' examinations in ' + courses.length + ' subjects.')
		link(rel='stylesheet' href='/examdb.css')
		meta(name='viewport' content='width=device-width, initial-scale=1')
	body
		header
			p
				a(href='/') ExamDB

		section
			h1 #{qualification.label} #{examboard.name} subjects

			p The exam board #{examboard.name} sets #{qualification.label} examinations in #{courses.length} subjects.

			h2 Pick a subject

			ol
				each course in courses
					li
						a(href='/courses/'+course.id) #{course.pos.name}

			hr

			ul
				li
					a(href='/examboards/'+examboard.id) More qualifications from #{examboard.name}
				li
					a(href='/qualifications/'+qualification.id) More providers of #{qualification.label} examinations

