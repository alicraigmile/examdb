doctype html
html
    head
        title #{course.name} exams | ExamDB
        meta(charset='UTF-8')
        meta(name='description' content='There are ' + exams.length + ' ' + course.name + ' examinations set by the '+course.ExamBoard.name+' exam board.')
        link(rel='stylesheet' href='/examdb.css')
        link(rel='alternate' type='application/json' title='JSON' href='/courses/'+course.id+'.json')
        meta(name='viewport' content='width=device-width, initial-scale=1')
        script(src='/library/jquery/jquery.min.js')
        script(src='/library/jquery-tablesort/jquery.tablesort.min.js')
    body
        header
            p
                a(href='/' title='ExamDB Homepage')
                    img(src='/examdb.png' width='64' height='64' alt='')

        section
            h1 #{course.name} exams


            p There are #{exams.length} #{course.name} exams.

            table
                thead
                    tr(class='headings')
                        th Code
                        th Paper
                        th Notes
                        th Date
                        th Morning/Afternoon
                        th Duration
                tbody
                    each exam in exams
                        - var dateSort = exam.date + (exam.timeofday=='Morning' ? 'T0000' : 'T1200')
                        tr
                            td= exam.code
                            td
                                a(href='/exams/'+exam.id)= exam.paper
                            td= exam.notes
                            td(data-sort-value=dateSort)= exam.date
                            td= exam.timeofday
                            td= exam.duration


            h2 Revison guides
            ul(class='revision-guides')
                if course.bitesize

                    li
                        a(href='https://www.bbc.com/education/examspecs/'+course.bitesize)
                            img(src='/bbc-bitesize.png' alt='BBC Bitesize revision guides' width='40' height='40')
                            = ' BBC Bitesize' 

                else
                    if course.ProgrammeOfStudy.bitesize
                
                        li
                           a(href='https://www.bbc.com/education/subjects/'+course.ProgrammeOfStudy.bitesize)
                                img(src='/bbc-bitesize.png' alt='BBC Bitesize revision guides' width='40' height='40')
                                = ' BBC Bitesize' 
                    else
                        li None listed

            h2 More like this

            ul
                li
                    a(href='/programmesofstudy/'+course.ProgrammeOfStudy.id) #{course.ProgrammeOfStudy.name} from other exam boards
                li
                    a(href='/examboards/'+course.ExamBoard.id) More subjects from #{course.ExamBoard.name}

            h2 Download this data

            ul
                li
                    a(rel='alternate' type='application/json' href='/courses/'+course.id+'.json') JSON

        script
            | $('table').tablesort();


