doctype html
html
	head
		title #{qualification.name} programmes of study | ExamDB
		meta(charset='UTF-8')
		meta(name='description' content='There are '+ qualification.ProgrammeOfStudies.length+' ' + qualification.name + ' programmes of study.')
		include meta.pug
		meta(name='viewport' content='width=device-width, initial-scale=1')
		link(rel='stylesheet' href='/examdb.css')
		link(rel='alternate' type='application/json' title='JSON format' href='/qualifications/'+qualification.id+'.json')
	body
		header
			p
				a(href='/' title='ExamDB Homepage')
					img(src='/examdb.png' width='64' height='64' alt='')
		
		section
			h1 #{qualification.name} programmes of study

			p There
				= qualification.ProgrammeOfStudies.length==1?' is ':' are '
				| #{qualification.ProgrammeOfStudies.length} #{qualification.name}
				= qualification.ProgrammeOfStudies.length==1?' programme ':' programmes '
				| of study.

			ul
				each programmeofstudy in qualification.ProgrammeOfStudies
					li
						a(href='/programmesofstudy/'+programmeofstudy.id) #{programmeofstudy.name}

			h2 Download this data

			ul
				li
					a(rel='alternate' type='application/json' href='/qualifications/'+qualification.id+'.json') JSON
