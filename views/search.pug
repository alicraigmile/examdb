doctype  html
html
	head
		title Search | ExamDB
		meta(charset='UTF-8')
		meta(name='description' content='You can search for exams by examboard, qualification, subject and date.')
		link(rel='stylesheet' href='/examdb.css')
		meta(name='viewport' content='width=device-width, initial-scale=1')
	body

		header
			p
				a(href='/' title='ExamDB Homepage')
					img(src='/examdb.png' width='64' height='64' alt='')
		section
			h1 Search

			p You can search for exams by examboard, qualification, subject and date.

			form(method='get' action='/search' class='search')
				div
					input(type='text' id='query' name='q' value=query)
					input(type='submit'  name='' value='üîç')

			script
				| document.getElementById("query").focus();


			if results
				h2 Results for '#{query}'

				ul
					each result in results
						li
							if result.isProgrammeOfStudy
								a(href='/programmesofstudy/'+result.id) #{result.qualification} #{result.name}
					
							if result.isQualification
								a(href='/qualifications/'+result.id) #{result.name}
